<!DOCTYPE html>

<head>
    <%- include('../partials/headGen'); %>
        <link rel="stylesheet" href="style/cart.css">
</head>

<body>
    <header>
        <%- include('../partials/header'); %>
    </header>
    <div class="container">
        <div class="main-content">
            <div class="cart-title">
                <h2>Voici votre panier</h2>
                <p>
                    <%=cartTotal%>€
                </p>
            </div>

            <hr>
            <% if (cart.length !==0) {%>
                <%cart.forEach((product, index)=> { %>
                    <form class="cart-container" action="/cart/delete" method="post">
                        <input type="hidden" name="idProduct" value="<%=product.id%>">
                        <img class="img" src="<%=product.img%>">
                        <div class="item-grid">
                            <p>
                                <%=product.name%>
                            </p>
                            <p class="category">
                                <%=product.category%>
                            </p>
                        </div>
                        <p class="item-grid">
                            <%=product.price%>€
                        </p>
                        <button class="item-grid-button">Supprimer</button>

                    </form>
                    <hr class="divider">
                    <%})%>
                        <% } else {%>
                            <p>Votre panier est vide :)</p>
                            <% }%>
        </div>
        <div class="client">
            <!--Permet d'afficher le formulaire du contrat que si on a un cart rempli-->
            <%if (cart.length !==0) {%>
                <form class="client-form" action="/cart/add" method="post">
                    <label>Votre nom : </label>
                    <input class="client-input" id="lastname" name="lastname">

                    <label>Votre prénom : </label>
                    <input class="client-input" id="firstname" name="firstname">

                    <label>Votre email : </label>
                    <input class="client-input" id="email" name="email" type="email">

                    <label>Votre adresse : </label>
                    <input class="client-input" id="adress" name="adress">

                    <label>Votre code postal : </label>
                    <input class="client-input" id="zipCode" name="zipCode">

                    <button>Valider le panier</button>
                </form>
                <%}%>

        </div>

    </div>
    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>

</html>